{
  "name": "dd-helper-electron",
  "version": "1.0.0",
  "description": "A D&D helper app for managing and displaying media files",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "vue-tsc --noEmit && electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron-vite preview",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:main": "jest --config jest.config.ts.js",
    "test:main:watch": "jest --config jest.config.ts.js --watch",
    "test:main:coverage": "jest --config jest.config.ts.js --coverage",
    "legacy:test": "jest",
    "legacy:start": "electron src-legacy/main.js"
  },
  "keywords": [
    "electron",
    "dnd",
    "tabletop",
    "media"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@electron-toolkit/utils": "^4.0.0",
    "@electron/rebuild": "^3.7.2",
    "@jest/globals": "^30.2.0",
    "@tailwindcss/postcss": "^4.1.15",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.8.1",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-mock-ipc": "^0.3.12",
    "electron-vite": "^3.1.0",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "spectron": "^19.0.0",
    "tailwindcss": "^4.1.15",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.1"
  },
  "dependencies": {
    "path": "^0.12.7",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "build": {
    "appId": "com.example.dd-helper",
    "productName": "D&D Helper",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "resources/**/*"
    ],
    "mac": {
      "icon": "src/public/d20icon.icns"
    }
  }
}
