{
  "name": "dd-helper-electron",
  "version": "1.0.0",
  "description": "A D&D helper app for managing and displaying media files",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "install-deps": "npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:verbose": "jest --verbose",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "keywords": [
    "electron",
    "dnd",
    "tabletop",
    "media"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-mock-ipc": "^0.3.12",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "spectron": "^19.0.0"
  },
  "dependencies": {
    "path": "^0.12.7"
  },
  "build": {
    "appId": "com.example.dd-helper",
    "productName": "D&D Helper",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "src/public/d20icon.icns"
    }
  }
}
